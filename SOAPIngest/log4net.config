<?xml version="1.0"?>
<configuration>
  <system.web>
    <compilation debug="false" targetFramework="4.5" />
    <httpRuntime targetFramework="4.5" />
  </system.web>

  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
  </configSections>

  <log4net debug="false">
    <appender name="RollingLogFileAppender" type="log4net.Appender.RollingFileAppender">
      <file type="log4net.Util.PatternString"  value="%property{LogDir}\\ws-ingest.log" />
      <appendToFile value="true" />

      <rollingStyle value="Date" />
      <param name="DatePattern" value="dd.MM.yyyy'.log'" />
      <filter type="log4net.Filter.LevelRangeFilter">
        <acceptOnMatch value="true" />
        <levelMin value="info" />
        <levelMax value="fatal" />
      </filter>
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%p %d %m%n" />
      </layout>
    </appender>
    <appender name="monitorAppender" type="log4net.Appender.RollingFileAppender">
      <file type="log4net.Util.PatternString" value="%property{LogDir}\\ws-ingest-monitor.mon" />
      <appendToFile value="true" />

      <rollingStyle value="Date" />
      <param name="DatePattern" value="dd.MM.yyyy'.log'" />
      <filter type="log4net.Filter.LevelRangeFilter">
        <acceptOnMatch value="true" />
        <levelMin value="Trace" />
        <levelMax value="Trace" />
      </filter>
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%p %d %m%n" />
      </layout>
    </appender>
    <appender name="DebugRollingLogFileAppender" type="log4net.Appender.RollingFileAppender">
      <file type="log4net.Util.PatternString" value="%property{LogDir}\\ws-ingest-debug.log" />
      <appendToFile value="true" />

      <rollingStyle value="Date" />
      <param name="DatePattern" value="dd.MM.yyyy'.log'" />
      <filter type="log4net.Filter.LevelRangeFilter">
        <acceptOnMatch value="true" />
        <levelMin value="debug" />
        <levelMax value="debug" />
      </filter>
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%p %d %m%n" />
      </layout>
    </appender>
    <root>
      <level value="ALL" />
      <appender-ref ref="RollingLogFileAppender" />
      <appender-ref ref="DebugRollingLogFileAppender" />

      <appender-ref ref="monitorAppender" />
    </root>
  </log4net>

</configuration>


